{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "Silent Web",
  "description": "Tools for remove web content",
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "options_page": "options.html",
  "action": {
    "default_title": "A-React-Title",
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.reddit.com/*"],
      "js": ["reddit.js"],
      "css": ["style.css"],
      "all_frames": true
    },
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["allDomains.js"],
      "css": ["style.css"],
      "all_frames": true
    }
  ]
}
